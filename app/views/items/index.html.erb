<h1>CD一覧<h4><%=link_to("カテゴリー編集","/categories/edit")%></h4></h1>
<!DOCTYPE html>
<html>
<head>
	<title>画面５（インデックス）</title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="style5.css">
</head>
<!--検索フォーム-->
<body>商品検索
　<%= search_form_for @q,url: items_path do |f| %>
  <%= f.search_field :artist_name_or_label_name_or_item_name_cont %>
  <%= f.submit "search",class: 'record-form__submit-button' %><br><br>

	<div class="container">
		<thead>
			<tr>
			<% if @items.each do |i| %>
			<td><div class="item_image">
				<!--画像画面左　登録がない場合noimageを表示-->
				<%= attachment_image_tag i, :image, :fill, 150, 150, format: 'jpeg', fallback: "noimage_panda1.jpg",class:"item_image" %></div></td>
				<!--商品内容-->
				<td><div>artist name:<%= i.artist_name %></div>
				<div>cd name:<%= i.item_name %></div>
				<div>label:<%= i.label_name %></div>
				<div>stock:<%= i.stock %></div>
				<div>price:￥<%= i.price %></div>
				<%=link_to("編集する","/items/#{i.id}/edit")%><br>
				<%=link_to("削除する",item_path(i), method: :delete)%><br><% end %></td>
			</div>
		</div>
	</div>
</tr>
</thead><% end %><% end %><br><br>




	<!--           こ          こ            か         ら        先はeachで表示される部分だから、実装する時は消す-->
		<!--                こ            こ              ま              で               消               す               -->

</body>
</html>