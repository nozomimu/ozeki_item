<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2>商品登録</h2><br>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">
        アーティスト名　<%= f.text_field :artist_name, class:"form-control" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      タイトル　　　　<%= f.text_field :item_name, class:"form-control", rows:"3" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      レーベル　　　　<%= f.text_field :label_name, class:"form-control", rows:"3" %>
    </div>
  </div>
   <div class="row">
    <div class="col-sm-12">
      価格　　　　　　<%= f.text_field :price, class:"form-control", rows:"3" %>
    </div>
  </div>
    <div class="row">
    <div class="col-sm-12">
      ジャケット画像　<%= f.attachment_field :image %>
    </div>
  </div>
  <br>
   <div class="row">
    <div class="col-sm-12">
      在庫数　　　　　<%= f.text_field :stock, class:"form-control", rows:"3" %>
    </div>
  </div>
     <div class="row">
    <div class="col-sm-12">
      リリース日　　　<%= f.text_field :release_date, class:"form-control", rows:"3" %>
    </div>
  </div>

    <%= f.fields_for :discs do |d|%>
    ディスク番号　　<%= d.text_field :disc_name %><br>

      <%= f.fields_for :songs do |s|%>
      　　　　曲一覧　　<%= s.text_field :number, :size=>"5" %> <%= s.text_field :song_name %><br>
      　　　　　　　　　<%= s.text_field :number, :size=>"5" %> <%= s.text_field :song_name %><br>
      　　　　　　　　　<%= s.text_field :number, :size=>"5" %> <%= s.text_field :song_name %><br>
      <% end %>
    <% end %>
  <hr>
  <%= f.submit "変更する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>