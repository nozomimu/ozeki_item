
<div class="row">
  <h2>商品登録</h2>
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  　<div class="col-sm-12">
      商品画像　　　　<%= f.attachment_field :image %>
    </div>
  <div class="row">
    <div class="col-sm-12">
      商品名　　　　　<%= f.text_field :item_name, class:"form-control", rows:"3" %>
    </div>
  </div>

      ブランド　　　　<%= f.collection_select :brand_id, Brand.all, :id, :brand_name %><%=link_to("ブランド名編集",brands_path)%><br>

  <!--カテゴリー登録-->
      カテゴリー　　　<%= f.collection_select :category_id, Category.all, :id, :name %><%=link_to("カテゴリー編集",categories_path)%>
   <div class="row">
    <div class="col-sm-12">
      価格　　　　　　<%= f.text_field :price, class:"form-control", rows:"3" %>
    </div>
  </div>

      サイズ　　　　　<%= f.collection_select :size_id, Size.all, :id, :size_name %><%=link_to("サイズ編集",sizes_path)%><br>
   <div class="row">
    <div class="col-sm-12">
      在庫数　　　　　<%= f.text_field :stock, class:"form-control", rows:"3" %>
    </div>
  </div>
     <div class="row">
    <div class="col-sm-12">
      発売日　　　　　<%= f.date_field :release_date, class:"form-control", rows:"3" %>
    </div>
  </div>


  <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <%= link_to"一覧に戻る", "/" %>
</div>
<% end %>